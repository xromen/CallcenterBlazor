@using Callcenter.Web.Extensions
<style>
    .nav-button{
        width: 80px;
        height: 80px;
    }
    .nav-button:hover{
        background-color: #daba4d;
    }
    .nav-button svg{
        font-size: 2.6rem;
        color: #81848d;
    }
</style>

<AuthorizeView>
    <MudPaper Style="@Style" Class="@Class" Elevation="10">
        <MudStack Spacing="0">
            <MudTooltip Text="Новости" Arrow="true" Placement="Placement.Left">
                <MudIconButton Class="nav-button" Variant="Variant.Filled" Href="/" Icon="@Icons.Material.Filled.ListAlt"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Обращения" Arrow="true" Placement="Placement.Left">
                <MudIconButton Class="nav-button" Variant="Variant.Filled" Href="/declarations" Icon="@Icons.Material.Filled.Message"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Профиль" Arrow="true" Placement="Placement.Left">
                <MudIconButton Class="nav-button" Variant="Variant.Filled" Href="/profile" Icon="@Icons.Material.Filled.Person"></MudIconButton>
            </MudTooltip>
            @if (context.User.IsAdmin())
            {
                <MudTooltip Text="Раздел администратора" Arrow="true" Placement="Placement.Left">
                    <MudIconButton Class="nav-button" Variant="Variant.Filled" Href="/admin" Icon="@Icons.Material.Filled.Build"></MudIconButton>
                </MudTooltip>
            }
            <MudTooltip Text="Выход" Arrow="true" Placement="Placement.Left">
                <MudIconButton Class="nav-button" Variant="Variant.Filled" Href="/Account/Logout" Icon="@Icons.Material.Filled.Logout"></MudIconButton>
            </MudTooltip>
        </MudStack>
    </MudPaper>
</AuthorizeView>