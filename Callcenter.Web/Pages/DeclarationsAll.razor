              ServerData="ServerReload">
    <Columns>
        <PropertyColumn Property="x => x.Operator" Title="Оператор" />
        <PropertyColumn Property="x => x.Operator" Title="Оператор" />
        <PropertyColumn Property="x => x.Operator" Title="Оператор" />
