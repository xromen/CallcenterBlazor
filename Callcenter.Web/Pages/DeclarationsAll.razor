    <PagerContent>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudTooltip Text="Выгрузка в Excel" Arrow Placement="Placement.Top">
                <MudIconButton Class="ms-4" Icon="@Icons.Custom.FileFormats.FileExcel" Color="Color.Success" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Выгрузка в Pdf" Arrow Placement="Placement.Top">
                <MudIconButton Icon="@Icons.Custom.FileFormats.FilePdf" Color="Color.Error" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Выгрузка в Csv" Arrow Placement="Placement.Top">
                <MudIconButton Icon="@Icons.Custom.FileFormats.FileDocument" Color="Color.Info" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Полная выгрузка" Arrow Placement="Placement.Top">
                <MudIconButton Icon="@Icons.Material.Filled.Search" Color="Color.Tertiary" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudSpacer/>
            <MudDataGridPager T="DeclarationDetail" Style="width: fit-content"/>
        </MudStack>
    </PagerContent>
</FlexDataGrid>