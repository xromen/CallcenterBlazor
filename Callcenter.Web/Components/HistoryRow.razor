<style>
    .history-date{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    
    .history-action-name{
        font-size: 22px;
    }
    
    .history-action-user{
        font-style: italic;
        font-size: 15px;
    }
    
    .history-action-time{
        font-style: italic;
        font-size: 13px;
    }
</style>

<MudStack Row
          Class="px-8 py-1 mud-width-full">
    <MudPaper Class="history-date px-4">
        <MudText Typo="Typo.h4">@Action.Date.Day</MudText>
        <MudText>@Action.Date.ToString("MM.yyyy")</MudText>
    </MudPaper>
    <MudPaper Class="flex-grow-1">
        <MudStack Class="px-6 py-4"
                  Spacing="0">
            <MudText Class="my-0 history-action-name">@Action.Action</MudText>
            <MudText Class="my-0 history-action-user">@Action.User</MudText>
            <MudText Class="my-0 history-action-time">@Action.Date.ToString("HH:mm:ss")</MudText>
        </MudStack>
    </MudPaper>
</MudStack>
