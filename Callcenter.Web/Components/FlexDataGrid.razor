@typeparam T

<style>
    .selected {
        background-color: #ffbd10 !important;
    }

    .mud-table {
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    
    .mud-table-pagination {
        flex: 0 0 auto; 
    }
    
    .mud-table-cell{
        border-right: 1px solid var(--mud-palette-table-lines);
        max-width: 700px;
    }

    .grid-container {
        @if (IsZoomed)
        {
            @:max-height: 65vh;
        }
        else
        {
            @:max-height: 70vh;
        }
        height: 100%;
    }
</style>

<MudStack Class="grid-container mx-2">
    <MudDataGrid T="T" 
                 Class="flex-grid"
                 RowClassFunc="RowClassFunc" 
                 RowClick="RowClick" 
                 RowClass="cursor-pointer"
                 Hover="true" 
                 Filterable="true" 
                 ServerData="ServerData" 
                 @ref="_mudDataGrid"
                 Height="100%"
                 FixedHeader="true"
                 Striped="true"
                 ColumnResizeMode="ResizeMode.Container"
                 Bordered="true"
                 FilterDefinitions="@FilterDefinitions">
        <Columns>
            @Columns
        </Columns>
        <PagerContent>
            @PagerContent
        </PagerContent>
    </MudDataGrid>
</MudStack>
