@page "/Declarations_Double"

<DeclarationsToolbar/>

<FlexDataGrid T="DeclarationDoubleModel"
              ServerData="ServerReload">
    <Columns>
        <PropertyColumn Property="x => x.SurName" Title="Фамлия" />
        <PropertyColumn Property="x => x.FirstName" Title="Имя" />
        <PropertyColumn Property="x => x.LastName" Title="Отчество" />
        <PropertyColumn Property="x => x.BirthDate" Title="Дата рождения" />
        <PropertyColumn Property="x => x.DoubleCount" Title="Количество дублей" />
    </Columns>
    <PagerContent>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudTooltip Text="Выгрузка в Excel" Arrow>
                <MudIconButton Class="ms-4" Icon="@Icons.Custom.FileFormats.FileExcel" Color="Color.Success" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Выгрузка в Pdf" Arrow>
                <MudIconButton Icon="@Icons.Custom.FileFormats.FilePdf" Color="Color.Error" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Выгрузка в Csv" Arrow>
                <MudIconButton Icon="@Icons.Custom.FileFormats.FileDocument" Color="Color.Info" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudTooltip Text="Полная выгрузка" Arrow>
                <MudIconButton Icon="@Icons.Material.Filled.Search" Color="Color.Tertiary" Variant="Variant.Filled"></MudIconButton>
            </MudTooltip>
            <MudSpacer/>
            <MudDataGridPager T="DeclarationDoubleModel" Style="width: fit-content"/>
        </MudStack>
    </PagerContent>
</FlexDataGrid>